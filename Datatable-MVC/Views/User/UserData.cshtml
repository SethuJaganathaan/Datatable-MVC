@{
    Layout = "_TestLayout";
}

<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.7/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"/>
</head>

<div class="container">
    <button id="showUserDetailsButton" class="btn btn-primary">Show User Details</button>
</div>

<div class="modal fade" id="userDetaiLsModal" tabindex="-1" role="dialog" aria-labelledby="userDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class=" modal-header">
                <h5 class="modal-title" id="userDetailsModalLabel">User Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table id="userDetailsTable" class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @*DataTable will populate the data here*@
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
            </div>
            <button type="button" class="btn btn-secondary" data-dismiss="modal"> Close</button>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        var dataTable;
        $('#showUserDetailsButton').click(function () {
            $('#userDetaiLsModal').modal('show');
            if (!dataTable) {
                dataTable = $('#userDetailsTable').DataTable({
                    "ajax": {
                        "url": "@Url.Action("GetUserDetailsData", "User")",
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "id" },
                        { "data": "name" },
                        { "data": "details" }
                    ]
                });
            }
        });
    });
</script>
